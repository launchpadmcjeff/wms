{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "The CodePipeline Stack.  It builds the infrastructure to get to production.",
    "Parameters": {
        "CodeBuildProjectName": {
            "Description": "The project name in CodeBuild.",
            "Type": "String",
            "Default": "warez-my-stuff",
            "AllowedPattern": "[\\x20-\\x7E]*",
            "ConstraintDescription": "Can contain only ASCII characters."
        },
        "ArtifactStoreS3Location": {
            "Description": "The S3 bucket for intermediate results.",
            "Type": "String",
            "Default": "codepipeline-us-west-2-435776636860",
            "AllowedPattern": "[\\x20-\\x7E]*",
            "ConstraintDescription": "Can contain only ASCII characters."
        },
        "GitBranch": {
            "Description": "The CodeCommit Git branch to build.",
            "Type": "String",
            "Default": "master",
            "AllowedPattern": "[\\x20-\\x7E]*",
            "ConstraintDescription": "Can contain only ASCII characters."
        },
        "BaseStackName": {
            "Description": "Name of an active CloudFormation stack that contains the networking resources, such as the subnet and security group, that will be used in this stack.",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "base-stack"
        },
        "RepositoryName": {
            "Description": "The Git repository to use for builds.",
            "Type": "String",
            "Default": "warez-my-stuff",
            "AllowedPattern": "[\\x20-\\x7E]*",
            "ConstraintDescription": "Can contain only ASCII characters."
        },
        "PipelineName": {
            "Description": "The name for the new AWS CloudPipeline.",
            "Type": "String",
            "Default": "warez-my-stuff",
            "AllowedPattern": "[\\x20-\\x7E]*",
            "ConstraintDescription": "Can contain only ASCII characters."
        }
    },
    "Resources": {
        "WarezMyStuffPipeline": {
            "Type": "AWS::CodePipeline::Pipeline",
            "Properties": {
                "ArtifactStore": {
                    "Type": "S3",
                    "Location": {
                        "Ref": "ArtifactStoreS3Location"
                    }
                },
                "Name": {
                    "Ref": "PipelineName"
                },
                "RestartExecutionOnUpdate": false,
                "RoleArn": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${BaseStackName}-CodePipelineRole"
                    }
                },
                "Stages": [
                    {
                        "Name": "Source",
                        "Actions": [
                            {
                                "Name": "SourceAction",
                                "ActionTypeId": {
                                    "Category": "Source",
                                    "Owner": "AWS",
                                    "Version": "1",
                                    "Provider": "CodeCommit"
                                },
                                "Configuration": {
                                    "BranchName": {
                                        "Ref": "GitBranch"
                                    },
                                    "RepositoryName": {
                                        "Ref": "RepositoryName"
                                    },
                                    "PollForSourceChanges": true
                                },
                                "OutputArtifacts": [
                                    {
                                        "Name": "SourceOutput"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "Build",
                        "Actions": [
                            {
                                "Name": "BuildAction",
                                "InputArtifacts": [
                                    {
                                        "Name": "SourceOutput"
                                    }
                                ],
                                "ActionTypeId": {
                                    "Category": "Build",
                                    "Owner": "AWS",
                                    "Version": "1",
                                    "Provider": "CodeBuild"
                                },
                                "Configuration": {
                                    "ProjectName": {
                                        "Ref": "CodeBuildProjectName"
                                    }
                                },
                                "RunOrder": 1
                            }
                        ]
                    }
                ]
            }
        }
    }
}